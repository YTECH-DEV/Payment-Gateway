{
  "name": "ypay-sdk",
  "version": "1.0.0",
  "description": "YPAY Payment SDK with UI",
  "scripts": {
    "build:sdk": "parcel build src/sdk/ypay.js src/sdk/transaction.js src/sdk/enums.js src/sdk/patterns.js --dist-dir dist/sdk --no-source-maps",
    "build:ui": "parcel build src/ypay_ui/js/main.js --dist-dir dist/ui --no-source-maps",
    "build:css": "parcel build src/ypay_ui/styles/style.css --dist-dir dist/css --no-source-maps",
    "build": "npm run clean && npm run build:sdk && npm run build:ui && npm run build:css",
    "clean": "rm -rf dist .parcel-cache"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "babel-loader": "^10.0.0",
    "babelify": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.5",
    "mini-css-extract-plugin": "^2.9.4",
    "parcel": "^2.12.0",
    "webpack": "^5.104.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "html-minifier": "^4.0.0"
  },
  "browserify": {
    "transform": [
      ["babelify", { "presets": ["@babel/preset-env"] }]
    ]
  }
}
